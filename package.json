{
  "name": "gimme-colours",
  "version": "1.0.3",
  "description": "A quick CLI tool for testing basic colour output in your terminal.",
  "main": "./prod/index.js",
  "scripts": {
    "prebuild": "rm -rf ./prod",
    "build": "tsc",
    "lint": "eslint src",
    "start": "node ./prod/index.js",
    "test": "ts-mocha -u tdd ./src/tests/*.spec.ts"
  },
  "bin": {
    "gimme-colours": "bin/gimme-colours"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nhcarrigan/gimme-colours.git"
  },
  "keywords": [
    "npm",
    "cli",
    "typescript"
  ],
  "author": "Nicholas Carrigan",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/nhcarrigan/gimme-colours/issues"
  },
  "engines": {
    "node": "^15.10.0",
    "npm": "^7.6.0"
  },
  "homepage": "https://github.com/nhcarrigan/gimme-colours#readme",
  "devDependencies": {
    "@types/chai": "4.2.15",
    "@types/mocha": "8.2.2",
    "@types/test-console": "1.1.0",
    "@typescript-eslint/eslint-plugin": "4.19.0",
    "@typescript-eslint/parser": "4.20.0",
    "chai": "4.3.4",
    "eslint": "7.23.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "5.2.0",
    "lint-staged": "10.5.4",
    "mocha": "8.3.2",
    "prettier": "2.2.1",
    "test-console": "1.1.0",
    "ts-mocha": "8.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
